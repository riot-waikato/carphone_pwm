<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlmaster"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark">

    <!--
    <TextView
        android:id="@+id/data_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    -->

    <ImageView
        android:id="@+id/background_image"
        android:background="@android:color/holo_red_dark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/redsquare_updown"
        android:background="@android:color/holo_red_dark"
        android:layout_height="256px"
        android:layout_width="256px"
        />
    <ImageView
        android:id="@+id/redsquare_leftright"
        android:background="@android:color/holo_red_dark"
        android:layout_height="256px"
        android:layout_width="256px"
        />
    <ImageView
        android:id="@+id/indicator_updown"
        android:layout_width="125px"
        android:layout_height="125px"
        android:background="@android:color/holo_orange_dark"/>

    <ImageView
        android:id="@+id/indicator_leftright"
        android:layout_width="125px"
        android:layout_height="125px"
        android:background="@android:color/holo_orange_dark"/>
    <TextView
        android:id="@+id/XH"

        android:layout_width="500px"
        android:layout_height="100px"
        android:text="xh"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/YH"
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="yh"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/ZH"

        android:layout_width="500px"
        android:layout_height="100px"
        android:text="zh"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/XV"
        android:layout_width="500px"
        android:layout_height="100px"
        android:rotation="-90"
        android:text="xv"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/YV"
        android:layout_width="500px"
        android:layout_height="100px"
        android:rotation="-90"
        android:text="yv"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/ZV"
        android:layout_width="500px"
        android:layout_height="100px"
        android:rotation="-90"
        android:text="zv"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/TIMEV"
        android:layout_width="500px"
        android:layout_height="100px"
        android:rotation="-90"
        android:text="TIME"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/TIME"
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="TIME"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/right_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"/>
    <TextView
        android:id="@+id/forward_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"/>

    <TextView
        android:id="@+id/backward_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"/>

    <TextView
        android:id="@+id/left_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Timer"
        android:id="@+id/buttonReset"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/redsquare_updown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start/Stop Timer"
        android:id="@+id/buttonStop"
        android:layout_toEndOf="@+id/XH" />
</RelativeLayout>

                  